<launch>        
  <!-- 
       Start an apriltag node using the default settings
       to connect to an OpenNI device (e.g. Kinect). 
  -->
  <node pkg="cv_camera" type="cv_camera_node" name="cv_camera">
    <param name="~camera_info_url" value="file:///$(find hello_ros)/calib/x220_cam.yaml" />
  </node> 

  <node ns="cv_camera" pkg="image_proc" type="image_proc" name="image_proc" />
  <node pkg="apriltags_ros" type="apriltag_detector_node" name="apriltags" output="screen">
    <param name="~default_tag_size" value="0.037" />

    <param name="~viewer" value="false" />
    <param name="~publish_detections_image" value="true" />

    <param name="~display_type" value="CUBE" />
    <param name="~marker_thickness" value="0.02" />

    <rosparam command="delete" param="tag_data" />
    <rosparam param="/apriltags/tag_data">
      "1": 
        size: 0.035
      "2":
        size: 0.048
    </rosparam>
    <rosparam param="/apriltags/tag_descriptions">[
        {id: 0, size: 0.081},
        {id: 1, size: 0.081},
        {id: 2, size: 0.081},
        {id: 3, size: 0.081},
        {id: 4, size: 0.081},
        {id: 5, size: 0.081},
        {id: 6, size: 0.054},
        {id: 7, size: 0.054},
        {id: 8, size: 0.054},
        {id: 9, size: 0.054},
        {id: 10, size: 0.054},
        {id: 11, size: 0.054},
        {id: 12, size: 0.054},
        {id: 13, size: 0.054},
        {id: 14, size: 0.054},
        {id: 15, size: 0.054},
    ]
    </rosparam>
    
    <remap from="image_rect" to="/cv_camera/image_rect"/>
    <remap from="camera_info" to="/cv_camera/camera_info"/>
  </node>
</launch>
